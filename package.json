{
  "private": true,
  "name": "launcher",
  "description": "Opinionated launcher for games and other executables",
  "version": "0.2.0",
  "author": "gunslinger@sensonar.de",
  "license": "GNU GPLv3",
  "scripts": {
    "prepare": "husky install",
    "build": "yarn build:remix && yarn build:electron",
    "build:remix": "remix build",
    "build:electron": "tsc -p ./desktop/tsconfig.json",
    "dev": "remix dev",
    "postinstall": "remix setup node",
    "start": "yarn build && yarn start:electron",
    "start:remix": "remix-serve build",
    "start:electron": "electron desktop/build/main.js",
    "test": "jest  --passWithNoTests --coverage",
    "test:watch": "jest --watch  --passWithNoTests",
    "test:findRelatedTests": "jest --findRelatedTests --passWithNoTests",
    "test:integration": "cypress open",
    "ts:check": "tsc --noEmit",
    "lint": "yarn ts:check && eslint app/**/*.{ts,tsx}",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "app:dir": "yarn build && electron-builder --dir",
    "app:dist": "yarn build && electron-builder"
  },
  "dependencies": {
    "@remix-run/node": "^1.2.3",
    "@remix-run/react": "^1.2.3",
    "@remix-run/serve": "^1.2.3",
    "@remix-run/server-runtime": "^1.2.3",
    "@stitches/react": "^1.2.7",
    "bottleneck": "^2.19.5",
    "dotenv": "^16.0.0",
    "igdb-api-node": "^5.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "remix": "^1.2.3",
    "remix-electron": "^1.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/igdb-api-node": "^5.0.0",
    "@types/jest": "^27.4.0",
    "@types/jest-when": "^3.5.0",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "babel-loader": "^8.2.3",
    "cypress": "^9.5.0",
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13",
    "eslint": "^8.9.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.7",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-when": "^3.5.1",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "build": {
    "files": [
      "desktop"
    ],
    "extraFiles": [
      "public"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "${name}-${version}-portable.${ext}"
    }
  },
  "main": "desktop/build/main.js"
}
