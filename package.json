{
  "private": true,
  "name": "emuze",
  "description": "Launch your Games fast and simple",
  "version": "0.2.0",
  "author": "bmsuseluda <gunslinger@sensonar.de>",
  "email": "gunslinger@sensonar.de",
  "url": "https://github.com/bmsuseluda/emuze",
  "license": "GNU GPLv3",
  "scripts": {
    "prepare": "husky install",
    "build": "yarn build:electron && yarn build:remix",
    "build:electron": "tsc -p ./desktop/tsconfig.json",
    "build:remix": "remix build",
    "dev": "remix dev",
    "start": "yarn build && yarn start:electron",
    "start:remix": "remix-serve build",
    "start:electron": "electron desktop/build/main.js",
    "test": "jest  --passWithNoTests --coverage",
    "test:watch": "jest --watch  --passWithNoTests",
    "test:findRelatedTests": "jest --findRelatedTests --passWithNoTests",
    "test:integration": "cypress open",
    "ts:check": "tsc --noEmit && yarn build:electron --noEmit",
    "lint": "yarn ts:check && eslint app/**/*.{ts,tsx}",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "app:dir": "yarn build && electron-builder --dir",
    "app:dist": "yarn build && electron-builder"
  },
  "dependencies": {
    "@remix-run/node": "^1.6.8",
    "@remix-run/react": "^1.6.8",
    "@remix-run/serve": "^1.6.8",
    "@remix-run/server-runtime": "^1.6.8",
    "@stitches/react": "^1.2.8",
    "bottleneck": "^2.19.5",
    "dotenv": "^16.0.1",
    "igdb-api-node": "^5.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "remix-electron": "^1.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@remix-run/dev": "^1.6.8",
    "@remix-run/eslint-config": "^1.6.8",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@testing-library/react": "^13.3.0",
    "@types/igdb-api-node": "^5.0.0",
    "@types/jest": "^28.1.8",
    "@types/jest-when": "^3.5.2",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "babel-loader": "^8.2.5",
    "cypress": "^10.6.0",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3",
    "eslint": "^8.22.0",
    "eslint-plugin-react": "^7.31.0",
    "eslint-plugin-storybook": "^0.6.4",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "jest-when": "^3.5.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "require-from-string": "^2.0.2",
    "ts-jest": "^28.0.8",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "4.6.4",
    "webpack": "^5.74.0"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "build": {
    "appId": "org.emuze.emuze",
    "files": [
      "desktop"
    ],
    "extraFiles": [
      "public"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "${name}-${version}-portable.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Emulator"
    },
    "flatpak": {
      "files": [
        [
          "public",
          "/bin/public"
        ],
        [
          "public",
          "/bin"
        ]
      ]
    }
  },
  "main": "desktop/build/main.js",
  "packageManager": "yarn@3.2.0"
}
