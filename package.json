{
  "private": true,
  "name": "emuze",
  "description": "Launch your Games fast and simple",
  "version": "0.22.2",
  "author": "bmsuseluda <gunslinger@sensonar.de>",
  "email": "gunslinger@sensonar.de",
  "url": "https://github.com/bmsuseluda/emuze",
  "license": "GNU GPLv3",
  "scripts": {
    "prepare": "husky install",
    "dev": "concurrently -k 'yarn:dev:*'",
    "dev:electron": "yarn build:electron && yarn start:electron",
    "dev:remix": "cp -r ./public ./build && remix dev",
    "build": "yarn build:electron && yarn build:remix",
    "build:electron": "tsc -p ./desktop/tsconfig.json",
    "build:remix": "remix build",
    "start:electron": "cross-env NODE_ENV=development electron build/desktop/main.js",
    "start": "yarn build && yarn start:electron",
    "test": "jest --passWithNoTests --coverage",
    "test:watch": "jest --watch --passWithNoTests",
    "test:findRelatedTests": "jest --findRelatedTests --passWithNoTests",
    "ts:check": "tsc --noEmit && yarn build:electron --noEmit",
    "lint": "yarn ts:check && eslint --fix app/**/*.{ts,tsx}",
    "mame:build": "tsc -p ./mameImport/tsconfig.json",
    "mame:import": "yarn mame:build && node ./build/mameImport/mameImport/index.js",
    "app:dist": "yarn app:distLinux && yarn app:distWindows",
    "app:distLinux": "yarn build && electron-builder --linux",
    "app:distWindows": "yarn build && electron-builder --win",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.3",
    "@radix-ui/react-label": "^2.0.1",
    "@radix-ui/react-select": "^1.2.1",
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@remix-run/serve": "^1.15.0",
    "@remix-run/server-runtime": "^1.15.0",
    "@stitches/react": "^1.2.8",
    "apicalypse": "^0.2.0",
    "axios": "^1.4.0",
    "dotenv": "^16.0.3",
    "fast-xml-parser": "^4.2.2",
    "lodash.debounce": "^4.0.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "remix-electron": "^1.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@remix-run/dev": "^1.15.0",
    "@remix-run/eslint-config": "^1.15.0",
    "@storybook/addon-essentials": "^7.0.9",
    "@storybook/addon-interactions": "^7.0.9",
    "@storybook/addon-links": "^7.0.9",
    "@storybook/blocks": "^7.0.9",
    "@storybook/react": "^7.0.9",
    "@storybook/react-webpack5": "^7.0.9",
    "@testing-library/dom": "^9.2.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/apicalypse": "^0.1.1",
    "@types/jest": "^28.1.8",
    "@types/jest-when": "^3.5.2",
    "@types/lodash.debounce": "^4.0.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^24.1.3",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.39.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-storybook": "^0.6.12",
    "husky": "^8.0.3",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "jest-when": "^3.5.2",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prop-types": "^15.8.1",
    "require-from-string": "^2.0.2",
    "storybook": "^7.0.9",
    "ts-jest": "^28.0.8",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "build": {
    "appId": "org.emuze.emuze",
    "files": [
      "build/desktop"
    ],
    "extraFiles": [
      {
        "from": "public",
        "to": "public"
      },
      {
        "from": "build/public",
        "to": "public"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "${name}-${version}-portable.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Emulator"
    }
  },
  "main": "build/desktop/main.js",
  "packageManager": "yarn@3.5.0"
}
