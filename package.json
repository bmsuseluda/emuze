{
  "private": true,
  "name": "emuze",
  "description": "Opinionated launcher for roms",
  "version": "0.2.0",
  "author": "gunslinger@sensonar.de",
  "license": "GNU GPLv3",
  "scripts": {
    "prepare": "husky install",
    "build": "yarn build:remix && yarn build:electron",
    "build:remix": "remix build",
    "build:electron": "tsc -p ./desktop/tsconfig.json",
    "dev": "remix dev",
    "start": "yarn build && yarn start:electron",
    "start:remix": "remix-serve build",
    "start:electron": "electron desktop/build/main.js",
    "test": "jest  --passWithNoTests --coverage",
    "test:watch": "jest --watch  --passWithNoTests",
    "test:findRelatedTests": "jest --findRelatedTests --passWithNoTests",
    "test:integration": "cypress open",
    "ts:check": "tsc --noEmit && yarn build:electron --noEmit",
    "lint": "yarn ts:check && eslint app/**/*.{ts,tsx}",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "app:dir": "yarn build && electron-builder --dir",
    "app:dist": "yarn build && electron-builder"
  },
  "dependencies": {
    "@remix-run/node": "^1.4.1",
    "@remix-run/react": "^1.4.1",
    "@remix-run/serve": "^1.4.1",
    "@remix-run/server-runtime": "^1.4.1",
    "@stitches/react": "^1.2.7",
    "bottleneck": "^2.19.5",
    "dotenv": "^16.0.0",
    "igdb-api-node": "^5.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-icons": "^4.3.1",
    "remix-electron": "^1.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@remix-run/dev": "^1.4.1",
    "@remix-run/eslint-config": "^1.4.1",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/react": "^6.4.22",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/igdb-api-node": "^5.0.0",
    "@types/jest": "^27.4.0",
    "@types/jest-when": "^3.5.0",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "babel-loader": "^8.2.5",
    "cypress": "^9.5.4",
    "electron": "^18.0.4",
    "electron-builder": "^23.0.3",
    "eslint": "^8.13.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-storybook": "^0.5.10",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-when": "^3.5.1",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "build": {
    "files": [
      "desktop"
    ],
    "extraFiles": [
      "public"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "${name}-${version}-portable.${ext}"
    }
  },
  "main": "desktop/build/main.js",
  "packageManager": "yarn@3.2.0"
}
