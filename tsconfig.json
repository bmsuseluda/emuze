{
  "include": [
    "remix.env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "styled-system",
    "panda.config.ts",
    "app/**/*.css",
    "routes/**/*.ts",
    "routes/**/*.tsx",
    "routes/**/*.css",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "./electronApi.d.ts",
    "e2eTests/**/*.ts"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./app/*"],
      "@emotion/core": ["./types/emotion.d.ts"]
    },
    "noEmit": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"]
  }
}
