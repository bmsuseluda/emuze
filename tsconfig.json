{
  "include": [
    "remix.env.d.ts",
    "app/**/*",
    "styled-system",
    "panda.config.ts",
    ".storybook/**/*",
    "./electronApi.d.ts",
    "e2eTests/**/*",
    "generateIcon/**/*",
    "generateNameMappings/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@emotion/core": ["./types/emotion.d.ts"]
    },
    "noEmit": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals", "@remix-run/node", "vite/client"]
  }
}
