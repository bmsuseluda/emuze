{
  "include": [
    "scripts.ts",
    "../app/server/categoriesDB.server/index.ts",
    "../app/server/applicationsDB.server/index.ts"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["../app/*"]
    },
    "outDir": "./build",
    "target": "ESNext"
  }
}
